@model MyBlog.Domain.Models.Profile

@{
ViewBag.Title = "Profile";
Layout = "_Layout";
}

<div class="container mt-5">
    <div class="card profile-card mx-auto" style="max-width: 400px; border-radius: 8px; padding: 20px;">
        <div class="card-body text-center">
            <!-- Profile Picture -->
            <img src="@Model.ProfilePicture" alt="Profile Picture" class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;" />

            <!-- User Information -->
            <h3 class="card-title mt-3">@Model.Name</h3>
            <div class="text-start mt-4">
                <p><strong>Email:</strong> @Model.Email</p>
            </div>

            <!-- Logout Button -->
            <form asp-action="Logout" method="post" class="mt-4">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </div>
</div>

<style>
    .profile-card {
        margin-top: 50px;
    }
</style>
