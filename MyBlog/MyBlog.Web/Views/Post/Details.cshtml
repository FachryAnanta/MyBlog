@model MyBlog.Domain.Models.Post

@{
ViewBag.Title = "Post Details";
Layout = "_Layout";
}

<div class="head" style="text-align: center; position: relative" onsubmit="return confirmDelete()">
    <h2>@Model.Title</h2>

    <form asp-action="Delete" asp-route-id="@Model.Id" style="position: absolute; top: 0; right: 0;">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>

<div class="content">
    @Html.Raw(Model.Content)
</div>

@section Scripts {
    <script type="text/javascript">
        function confirmDelete() {
            return confirm("Are you sure you want to delete this post?");
        }
    </script>
}