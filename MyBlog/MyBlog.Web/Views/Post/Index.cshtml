@model IEnumerable<MyBlog.Domain.Models.Post>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    var contentPreviewLimit = 50;
}

<h2>Post</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Post</a>
</p>

<div class="post-container">
    @foreach (var item in Model)
    {
    <div class="post">
        <a asp-action="Details" asp-route-id="@item.Id" class="post-link">
            <div class="post-content">
                <h4>@item.Title</h4>
                <p>@item.Subtitle</p>
            </div>
            <div class="post-image">
                <img src="@(!string.IsNullOrEmpty(item.ImagePreview) ? item.ImagePreview : "/uploads/blank-image.jpg")" alt="Image preview" />
            </div>
        </a>
    </div>
    }
</div>
