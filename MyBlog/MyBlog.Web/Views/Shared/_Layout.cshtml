<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MyBlog.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/MyBlog.Web.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid d-flex justify-content-between">
            <!-- Placeholder kiri untuk memberi ruang kosong -->
            <div></div>

            <!-- Posisi Home dan Post di tengah -->
            <div class="position-absolute start-50 translate-middle-x">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Index">Post</a>
                    </li>
                </ul>
            </div>

            <div>
                @if (User.Identity.IsAuthenticated)
                {
                <a asp-area="" asp-controller="Profile" asp-action="Index" class="nav-link d-flex align-items-cente text-dark">
                    <img src="~/uploads/default-profile-picture.png" alt="Profile Picture" class="rounded-circle" style="width: 30px; height: 30px; margin-right: 8px;" />
                    <span>@User.Identity.Name</span>
                </a>
                }
                else
                {
                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                }
            </div>
        </div>
    </nav>
</header>

<div>
    <main role="main" class="container my-3 pb-3 container-custom">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - MyBlog.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>